<NotepadPlus>
	<functionList>
		<!-- ========================================================= [ PL/SQL ] -->
		<parser id="plsql_function" displayName="PL/SQL" commentExpr="((/\*.*?\*)/|(//.*?$))">
				<function
				mainExpr="^[ \t]*(CREATE([\s]+OR[\s]+REPLACE)?[\s]+)?((PACKAGE([\s]+BODY)?)|(PROCEDURE)|(FUNCTION))[\s]+[A-Za-z][\w_]*([\s]*(?'open'\().*?(\)))?(([\s]*;)|([\s]*([ia]s)\s)|([\s]+(RETURN)([\s]+[\w%\.]+)+(([\s]*;)|([\s]+([ia]s)\s))))"
				displayMode="$className->$functionName"
			>
			<className>
					<nameExpr expr="((PACKAGE([\s]+BODY)?))[\s]+[A-Za-z][\w_]*([\s]+[ai]s[\s]*)?"/>
				</className>
			<functionName>
					<nameExpr expr="[\s]+[A-Za-z][\w_]*([\s]*(?'open'\().*?(\)))?(([\s]*;)|([\s]*([ia]s)\s)|([\s]+(RETURN)([\s]+[\w%\.]+)+(([\s]*;)|([\s]+([ia]s)\s))))"/>
					<nameExpr expr="[A-Za-z][\w_]*([\s]*(?'open'\().*?(\)))?(([\s]*;)|([\s]*([ia]s)\s)|([\s]+(RETURN)([\s]+[\w%\.]+)+(([\s]*;)|([\s]+([ia]s)\s))))"/>
					<nameExpr expr="[A-Za-z][\w_]*([\s]*\([^\)]*\))?(([\s]+(RETURN)([\s]+[\w%\.]+)+))*"/>
				</functionName>
			</function>
		</parser>
	</functionList>
</NotepadPlus>
